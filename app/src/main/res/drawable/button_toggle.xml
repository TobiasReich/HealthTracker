<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Foreground = Selector Toggle -->
    <item android:id="@android:id/toggle">

        <selector>
            <item android:state_enabled="false">
                <layer-list >
                    <item android:drawable="@drawable/solid_white_black_stroke_rounded" />
                </layer-list>
            </item>

            <item android:state_enabled="true">
                <layer-list >
                    <item android:drawable="@drawable/solid_primary_black_stroke_rounded" />
                </layer-list>
            </item>

        </selector>
    </item>

</layer-list>