<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:paddingBottom="@dimen/Medi_Huge_Distance"
    android:paddingLeft="@dimen/Medi_Huge_Distance"
    android:paddingRight="@dimen/Medi_Huge_Distance"
    android:paddingTop="@dimen/Medi_Huge_Distance"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/Medi_Large_Distance">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/Medi_Medium_Icon_Size"
            android:layout_height="@dimen/Medi_Medium_Icon_Size"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/navHeadderTitleTV"
            style="@style/NavMenuHeadder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Medi_Large_Distance"
            android:layout_weight="1"
            android:text="Health Tracker"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mange your daily medicine" />

</LinearLayout>
